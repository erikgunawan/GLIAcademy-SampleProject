<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

  <uses-permission android:name="android.permission.INTERNET" />
  <application
      android:allowBackup="true"
      android:dataExtractionRules="@xml/data_extraction_rules"
      android:fullBackupContent="@xml/backup_rules"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/Theme.GLIAcademySampleProject"
      tools:targetApi="31">

    <activity android:name=".MainActivity"
        android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name=".viewmodel.WithoutViewModelActivity" />
    <activity android:name=".viewmodel.ViewModelActivity" />
    <activity android:name=".livedata.LiveDataActivity" />
    <activity android:name=".api.ApiActivity" />
    <activity android:name=".api_arch.view.ApiActivity" />
    <activity android:name=".rxjava.view.ApiActivity" />
  </application>

</manifest>